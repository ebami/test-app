{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "appName": {
      "type": "string",
      "metadata": {
        "description": "Base name for the application resources"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources"
      }
    },
    "sku": {
      "type": "string",
      "defaultValue": "B1",
      "allowedValues": [
        "F1",
        "B1",
        "B2",
        "S1",
        "S2",
        "P1v2",
        "P2v2"
      ],
      "metadata": {
        "description": "App Service Plan SKU (B1 or higher recommended for WebSockets)"
      }
    },
    "nodeVersion": {
      "type": "string",
      "defaultValue": "18-lts",
      "metadata": {
        "description": "Node.js version"
      }
    },
    "clientUrl": {
      "type": "string",
      "metadata": {
        "description": "URL of the frontend application for CORS"
      }
    },
    "staticWebAppLocation": {
      "type": "string",
      "defaultValue": "eastus2",
      "allowedValues": [
        "centralus",
        "eastus2",
        "eastasia",
        "westeurope",
        "westus2"
      ],
      "metadata": {
        "description": "Location for Static Web App (limited regions available)"
      }
    }
  },
  "variables": {
    "appServicePlanName": "[concat(parameters('appName'), '-plan')]",
    "backendAppName": "[concat(parameters('appName'), '-api')]",
    "staticWebAppName": "[concat(parameters('appName'), '-web')]"
  },
  "resources": [
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2022-09-01",
      "name": "[variables('appServicePlanName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "[parameters('sku')]"
      },
      "kind": "linux",
      "properties": {
        "reserved": true
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2022-09-01",
      "name": "[variables('backendAppName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanName'))]"
      ],
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanName'))]",
        "siteConfig": {
          "linuxFxVersion": "[concat('NODE|', parameters('nodeVersion'))]",
          "webSocketsEnabled": true,
          "alwaysOn": "[if(equals(parameters('sku'), 'F1'), false(), true())]",
          "appSettings": [
            {
              "name": "NODE_ENV",
              "value": "production"
            },
            {
              "name": "CLIENT_URL",
              "value": "[parameters('clientUrl')]"
            },
            {
              "name": "WEBSITE_NODE_DEFAULT_VERSION",
              "value": "[concat('~', substring(parameters('nodeVersion'), 0, 2))]"
            }
          ],
          "cors": {
            "allowedOrigins": [
              "[parameters('clientUrl')]"
            ],
            "supportCredentials": true
          }
        },
        "httpsOnly": true
      }
    },
    {
      "type": "Microsoft.Web/staticSites",
      "apiVersion": "2022-09-01",
      "name": "[variables('staticWebAppName')]",
      "location": "[parameters('staticWebAppLocation')]",
      "sku": {
        "name": "Free",
        "tier": "Free"
      },
      "properties": {
        "buildProperties": {
          "appLocation": "/client",
          "outputLocation": "build"
        }
      }
    }
  ],
  "outputs": {
    "backendUrl": {
      "type": "string",
      "value": "[concat('https://', reference(resourceId('Microsoft.Web/sites', variables('backendAppName'))).defaultHostName)]"
    },
    "staticWebAppUrl": {
      "type": "string",
      "value": "[concat('https://', reference(resourceId('Microsoft.Web/staticSites', variables('staticWebAppName'))).defaultHostname)]"
    },
    "backendAppName": {
      "type": "string",
      "value": "[variables('backendAppName')]"
    },
    "staticWebAppName": {
      "type": "string",
      "value": "[variables('staticWebAppName')]"
    }
  }
}
